<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2-debug</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/095da33a05.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="body">
      <div class="container">
        <p id="notice"><%= notice %></p>
        <div class="search-form" %>
          <% if user_signed_in? %>
            <%= form_with url: search_path, local: true, method: :get do |f| %>
              <%= f.text_field :search_word %>
              <%= select_tag 'range', options_for_select([['user', '1'], ['book', '2']]) %>
              <%= select_tag 'search', options_for_select([["前方一致", "forward_match"],["後方一致","backward_match"], ["完全一致","perfect_match"], ["部分一致", "partial_match"]]) %>
              <%= f.submit "検索" %>
            <% end %>
          <% end %>
        </div>
       <%= yield %>
      </div>
    </div>

    <%= render 'layouts/footer' %>
  </body>
</html>
